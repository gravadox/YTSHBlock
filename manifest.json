{
  "manifest_version": 3,
  "name": "YTSHBlock",
  "version": "1.0.1",
  "description": "Remove YouTube Shorts",
  "homepage_url": "https://github.com/gravadox/YTSHBlock",
  "author": "Gravadox",

  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": ["storage", "contextMenus", "tabs"],

  "background": {
  "scripts": ["background/contextMenu.js", "background/redirectShorts.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": [
        "waitForElm.js",
        "removeShortsDom.js",
        "removeShortSectionInChannelPage.js",
        "removeShortInSubscriptionPage.js",
        "removeShortsResultPage.js",
        "removeShortsWatchPage.js"
      ]
    }
  ],

  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "YTSHBlock"
  },

  "options_ui": {
    "page": "options/options.html"
  }
}
