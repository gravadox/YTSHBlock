{
  "manifest_version": 2,
  "name": "YTSHBlock",
  "version": "1.0.1",
  "description": "Remove Youtube shorts",
  "homepage_url": "https://github.com/gravadox/YTSHBlock",
  "author": "Raven Liu",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["waitForElm.js", "removeShortsDom.js", "removeShortSectionInChannelPage.js", "removeShortInSubscriptionPage.js", "removeShortsResultPage.js", "removeShortsWatchPage.js"]
    }
  ],
  "background": {
    "scripts":["background/redirectShorts.js", "background/contextMenu.js"]
  },
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": ["tabs", "storage", "menus"],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "browser_action": {
  "default_popup": "options/options.html",
  "default_icon": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "default_title": "YTSHBlock"
  }
}